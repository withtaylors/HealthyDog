<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fillViewport="true"
    android:scrollbarSize="10dp"
    android:scrollbarThumbVertical="@color/colorPrimaryDark"
    tools:context=".my1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:orientation="vertical"
        android:layout_margin="15dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/profile1"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:background="#F8DFBB"
                android:adjustViewBounds="true"
                android:scaleType="fitXY" />
            <ImageButton
                android:id="@+id/profile_pic1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="225dp"
                android:layout_marginTop="-40dp"
                android:background="#00000000"
                app:srcCompat="@drawable/profile_pic1"
                tools:ignore="SpeakableTextPresentCheck" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="700dp"
            android:orientation="vertical"
            android:layout_marginTop="15dp">
            <TextView
                android:id="@+id/name_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:paddingBottom="5dp"
                android:text="반려동물의 이름을 입력하세요."
                android:textColor="#000000"
                android:textColorHighlight="#000000"
                android:textColorHint="#000000"
                android:textSize="16sp" />
            <EditText
                android:id="@+id/inputname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="105dp"
                android:ems="10"
                android:gravity="center"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:hint="이름 입력"
                android:font="@font/gowundodum"
                android:textColor="#9A9696"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="40dp"
                android:gravity="center">
                <Spinner
                    android:id="@+id/spinner_year1"
                    android:layout_width="130dp"
                    android:layout_height="48dp"
                    android:fontFamily="@font/gowundodum"
                    android:minHeight="45dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    tools:ignore="SpeakableTextPresentCheck" />
                <Spinner
                    android:id="@+id/spinner_month1"
                    android:layout_width="100dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/gowundodum"
                    android:textAlignment="center"
                    android:gravity="center"
                    tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />
                <Spinner
                    android:id="@+id/spinner_day1"
                    android:layout_width="100dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/gowundodum"
                    android:textAlignment="center"
                    android:gravity="center"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
            </LinearLayout>

            <TextView
                android:id="@+id/birth_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-90dp"
                android:gravity="center"
                android:textStyle="bold"
                android:text="반려동물의 생일은 언제인가요?"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/type_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:gravity="center"
                android:textStyle="bold"
                android:text="반려동물의 견종을 선택하세요."
                android:textColor="#000000"
                android:textSize="16sp" />
            <Spinner
                android:id="@+id/spinner_type1"
                android:layout_width="200dp"
                android:layout_height="48dp"
                android:textAlignment="center"
                android:layout_marginLeft="100dp"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />
            <TextView
                android:id="@+id/gender_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:textStyle="bold"
                android:text="반려동물의 성별과 중성화 여부를 선택하세요."
                android:textColor="#000000"
                android:textColorHighlight="#000000"
                android:textColorHint="#000000"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_marginLeft="70dp"
                android:orientation="horizontal">

                <RadioGroup
                    android:id="@+id/gender"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/female1"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:text="여"/>
                    <RadioButton
                        android:id="@+id/male1"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:text="남"/>
                </RadioGroup>
                <Spinner
                    android:id="@+id/spinner_gender1"
                    android:layout_width="150dp"
                    android:fontFamily="@font/gowundodum"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:minHeight="48dp"
                    android:gravity="center"
                    android:textAlignment="gravity"
                    tools:ignore="SpeakableTextPresentCheck" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="250dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="반려동물의 모습과 비슷한 그림을 고르세요."
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:gravity="center"
                        android:textSize="16sp"/>
                    <ImageButton
                        android:id="@+id/fat1"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:backgroundTint="@drawable/mybtbackground"
                        android:layout_marginLeft="25dp"
                        app:srcCompat="@drawable/fat1_2" />
                    <ImageButton
                        android:id="@+id/fat2"
                        android:layout_marginTop="-100dp"
                        android:layout_marginLeft="150dp"
                        android:backgroundTint="@drawable/mybtbackground"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:srcCompat="@drawable/fat2_2" />
                    <ImageButton
                        android:id="@+id/fat3"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="275dp"
                        android:backgroundTint="@drawable/mybtbackground"
                        android:layout_marginTop="-100dp"
                        app:srcCompat="@drawable/fat3_2" />
                    <ImageButton
                        android:id="@+id/fat4"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:backgroundTint="@drawable/mybtbackground"
                        android:layout_marginLeft="90dp"
                        app:srcCompat="@drawable/fat4_2" />
                    <ImageButton
                        android:id="@+id/fat5"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="-100dp"
                        android:backgroundTint="@drawable/mybtbackground"
                        android:layout_marginLeft="215dp"
                        app:srcCompat="@drawable/fat5_2" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/walk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="반려동물의 하루 평균 산책 시간을 입력하세요."
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="8dp"
                android:textSize="16sp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginLeft="140dp"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/walk_1"
                    android:layout_width="100dp"
                    android:layout_height="60dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:inputType="number"
                    android:hint="산책 시간"
                    android:textColor="#9A9696"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="(분)" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/memo_1"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center"
            android:text="비만도는 마이페이지에서 간단하게 확인해 보세요!"
            android:textColor="#9A9696" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:layout_marginHorizontal="100dp">
            <Button
                android:id="@+id/submit_1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:backgroundTint="@color/bottom"
                android:fontFamily="@font/gowundodum"
                android:gravity="center"
                android:text="입력 완료"
                android:textSize="16sp"
                android:textAlignment="gravity"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginBottom="30dp"/>
        </LinearLayout>

        </LinearLayout>

</ScrollView>