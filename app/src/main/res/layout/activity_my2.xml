<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:fillViewport="true"
    android:scrollbarSize="10dp"
    tools:context=".MyPage"
    tools:ignore="SpeakableTextPresentCheck"
    android:id="@+id/container">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="18dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="@drawable/radiusview"
            android:backgroundTint="@color/background_brown"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/profile2"
                android:background="@drawable/radiusview"
                android:backgroundTint="@color/white"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:scaleType="fitXY"
                android:layout_marginTop="10dp">
            </ImageView>

            <TextView
                android:id="@+id/nametext"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_marginLeft="220dp"
                android:layout_marginTop="-195dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:text="이름: " />

            <TextView
                android:id="@+id/name2"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginTop="-40dp"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:layout_marginLeft="270dp"
                android:text="      " />


            <TextView
                android:id="@+id/textbirth"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:textAlignment="center"
                android:layout_marginLeft="220dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/black"

                android:text="출생일:" />
            <TextView
                android:id="@+id/birth_2"
                android:layout_width="120dp"
                android:layout_marginTop="-40dp"
                android:layout_marginLeft="270dp"
                android:layout_height="40dp"
                android:textSize="13sp"
                android:textColor="@color/black"

                android:text="             " />
            <TextView
                android:id="@+id/textgender"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_marginLeft="220dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:text="성별: " />
            <TextView
                android:id="@+id/gender2"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_marginTop="-40dp"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:layout_marginLeft="270dp"
                android:text="      " />
            <TextView
                android:id="@+id/texttype"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_marginLeft="220dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:text="견종: " />
            <TextView
                android:id="@+id/type2"
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:layout_marginTop="-40dp"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:layout_marginLeft="270dp"
                android:text="      " />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/radiusview"
            android:backgroundTint="@color/yellow"
            android:orientation="vertical">

            <TextView
                android:id="@+id/type3"
                android:layout_width="120dp"
                android:layout_marginLeft="5dp"
                android:layout_height="35dp"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textStyle="bold"
                android:text="" />

            <TextView
                android:id="@+id/typeinfo"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:textAlignment="center"
                android:textSize="12sp"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/radiusview"
            android:backgroundTint="@color/yellow"
            android:orientation="vertical">
            <TextView
                android:id="@+id/fattext"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginBottom="-20dp"
                android:textStyle="bold"
                android:text="비만도 체크" />
            <TextView
                android:id="@+id/fattext2"
                android:layout_width="210dp"
                android:layout_height="30dp"
                android:textSize="12sp"
                android:layout_marginTop="-8dp"
                android:layout_marginLeft="100dp"
                android:textColor="@color/black"
                android:layout_marginBottom="-20dp"
                android:textStyle="bold"
                android:text="*우리 아이와 닮은 체형을 골라주세요.*" />

            <ImageButton
                android:id="@+id/fat3"
                android:layout_width="70dp"
                android:layout_marginLeft="260dp"
                android:layout_marginTop="30dp"
                android:background="@android:color/transparent"
                android:layout_height="70dp"
                android:src="@drawable/fat3_2" />

            <ImageButton
                android:id="@+id/fat1"
                android:layout_width="70dp"
                android:layout_marginLeft="40dp"
                android:layout_height="70dp"
                android:background="@android:color/transparent"
                android:layout_marginTop="-70dp"
                android:src="@drawable/fat1_2" />

            <ImageButton
                android:id="@+id/fat2"
                android:layout_width="70dp"
                android:layout_marginLeft="150dp"
                android:layout_height="70dp"
                android:layout_marginTop="-70dp"
                android:background="@android:color/transparent"
                android:src="@drawable/fat2_2" />

            <ImageButton
                android:id="@+id/fat4"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="90dp"
                android:background="@android:color/transparent"
                android:layout_marginTop="5dp"
                android:src="@drawable/fat4_2" />

            <ImageButton
                android:id="@+id/fat5"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="-70dp"
                android:background="@android:color/transparent"
                android:layout_marginLeft="210dp"
                android:src="@drawable/fat5_2" />

            <TextView
                android:id="@+id/fatinfo"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textAlignment="center"
                android:layout_marginTop="7dp"
                android:textColor="@color/black"
                android:textStyle="normal"
                android:textSize="14sp"
                android:text="" />


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/radiusview"
            android:backgroundTint="@color/yellow"
            android:orientation="vertical">
            <TextView
                android:id="@+id/walktext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="평균 산책 시간(분)" />
            <TextView
                android:id="@+id/walk2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:text="" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/mytree" />

            <ProgressBar
                android:layout_width="300dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:progressBackgroundTint="@color/colorPrimaryDark"
                android:progressTint="@color/lightgreen"
                android:max="100"
                android:progressDrawable="@drawable/progressbar_my"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:id="@+id/progress"/>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textAlignment="center"
                android:layout_marginTop="-5dp"
                android:text="0" />
            <TextView
                android:id="@+id/textView4"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="337dp"
                android:textAlignment="center"
                android:layout_marginTop="-20dp"
                android:text="100" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                android:id="@+id/changeinfo"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="40dp"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/button_background_color"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:background="@drawable/radius"
                android:text="반려동물 정보 수정하기" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>