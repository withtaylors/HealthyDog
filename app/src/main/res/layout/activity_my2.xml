<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:fillViewport="true"
    android:scrollbarSize="10dp"
    tools:context=".MyPage"
    tools:ignore="SpeakableTextPresentCheck"
    android:onClick="onClick"
    android:id="@+id/container">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="18dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/radiusview"
            android:backgroundTint="@color/background_brown"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/profile2"
                android:background="@drawable/radiusview"
                android:backgroundTint="@color/white"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:scaleType="fitXY"
                android:layout_margin="10dp">
            </ImageView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="25dp">
                <TextView
                    android:id="@+id/nametext"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:text="이름: " />
                <TextView
                    android:id="@+id/textbirth"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:text="출생일:" />
                <TextView
                    android:id="@+id/textgender"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:text="성별: " />
                <TextView
                    android:id="@+id/texttype"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:text="견종: " />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="25dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/name2"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:text=" "/>
                <TextView
                    android:id="@+id/birth_2"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:text=" "/>
                <TextView
                    android:id="@+id/gender2"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:text=" " />
                <TextView
                    android:id="@+id/type2"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:text=" " />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/radiusview"
            android:backgroundTint="@color/yellow"
            android:orientation="vertical">
            <TextView
                android:id="@+id/type3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="견종"
                android:layout_margin="10dp"/>
            <TextView
                android:id="@+id/typeinfo"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="13dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="12sp"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:text="문장" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/radiusview"
            android:backgroundTint="@color/yellow"
            android:orientation="vertical">
            <TextView
                android:id="@+id/fattext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="비만도 체크" />
            <ImageView
                android:id="@+id/fatpic"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/fatinfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_margin="10dp"
                android:textColor="@color/purple_700"
                android:textStyle="normal"
                android:textSize="13sp"
                android:text="테스트" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/four"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/radiusview"
            android:backgroundTint="@color/yellow"
            android:orientation="vertical">
            <TextView
                android:id="@+id/walktext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="평균 산책 시간(분)" />
            <TextView
                android:id="@+id/walk2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/purple_700"
                android:textSize="12sp"
                android:text="문장" />
            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/mytree" />
            <ProgressBar
                android:layout_width="300dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:progressBackgroundTint="@color/colorPrimaryDark"
                android:progressTint="@color/lightgreen"
                android:max="100"
                android:progressDrawable="@drawable/progressbar_my"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:id="@+id/progress"/>
            <TextView
                android:id="@+id/textView3"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textAlignment="center"
                android:layout_marginTop="-5dp"
                android:text="0" />
            <TextView
                android:id="@+id/textView4"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="337dp"
                android:textAlignment="center"
                android:layout_marginTop="-20dp"
                android:layout_marginBottom="13dp"
                android:text="100" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                android:id="@+id/changeinfo"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/bottom"
                android:layout_gravity="center"
                android:textSize="15sp"
                android:padding="15dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:fontFamily="@font/gowundodum"
                android:text="반려동물 정보 수정하기"
                android:textColor="@color/white"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>