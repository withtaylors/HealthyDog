<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fillViewport="true"
    android:scrollbarSize="10dp"
    android:scrollbarThumbVertical="@color/colorPrimaryDark"
    tools:context=".my1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/profile1"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:background="@color/yellow"
            android:adjustViewBounds="true"
            android:scaleType="fitXY" />

        <ImageButton
            android:id="@+id/profile_pic1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="270dp"
            android:layout_marginTop="-30dp"
            android:background="#00000000"
            app:srcCompat="@drawable/profile_pic1"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/name_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textStyle="bold"
            android:paddingBottom="5dp"
            android:text="반려동물의 이름을 입력하세요."
            android:textColor="#000000"
            android:textColorHighlight="#000000"
            android:textColorHint="#000000"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/inputname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="105dp"
            android:ems="10"
            android:gravity="center"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:hint="이름 입력"
            android:font="@font/gowundodum"
            android:textColor="#9A9696"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="40dp"
            android:gravity="center">

            <Spinner
                android:id="@+id/spinner_year1"
                android:layout_width="130dp"
                android:layout_height="48dp"
                android:fontFamily="@font/gowundodum"
                android:minHeight="45dp"
                android:textAlignment="center"
                android:gravity="center"
                tools:ignore="SpeakableTextPresentCheck" />

            <Spinner
                android:id="@+id/spinner_month1"
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/gowundodum"
                android:textAlignment="center"
                android:gravity="center"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

            <Spinner
                android:id="@+id/spinner_day1"
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/gowundodum"
                android:textAlignment="center"
                android:gravity="center"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
        </LinearLayout>

        <TextView
            android:id="@+id/birth_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-90dp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="반려동물의 생일은 언제인가요?"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/type_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="반려동물의 견종을 선택하세요."
            android:textColor="#000000"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/spinner_type1"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:textAlignment="center"
            android:layout_marginLeft="100dp"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/gender_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="반려동물의 성별과 중성화 여부를 선택하세요."
            android:textColor="#000000"
            android:textColorHighlight="#000000"
            android:textColorHint="#000000"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_marginLeft="70dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/Female_1"
                android:layout_width="55dp"
                android:layout_height="48dp"
                android:layout_marginTop="15dp"
                android:backgroundTint="@color/button_background_color"
                android:fontFamily="@font/gowundodum"
                android:background="@drawable/radius"
                android:selectAllOnFocus="true"
                android:layout_marginRight="5dp"
                android:text="여" />

            <Button
                android:id="@+id/Male_1"
                android:layout_width="55dp"
                android:layout_height="48dp"
                android:fontFamily="@font/gowundodum"
                android:layout_marginTop="15dp"
                android:backgroundTint="@color/button_background_color"
                android:layout_marginRight="5dp"
                android:selectAllOnFocus="true"
                android:background="@drawable/radius"
                android:text="남" />

            <Spinner
                android:id="@+id/spinner_gender1"
                android:layout_width="150dp"
                android:fontFamily="@font/gowundodum"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:minHeight="48dp"
                android:gravity="center"
                android:textAlignment="gravity"
                tools:ignore="SpeakableTextPresentCheck" />


        </LinearLayout>

        <TextView
            android:id="@+id/walk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="반려동물의 하루 평균 산책 시간을 입력하세요."
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginLeft="140dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/walk_1"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_marginRight="5dp"
                android:ems="10"
                android:gravity="center"
                android:inputType="number"
                android:hint="산책 시간"
                android:textColor="#9A9696"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="(분)" />


        </LinearLayout>

        <TextView
            android:id="@+id/memo_1"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="비만도는 마이페이지에서 간단하게 확인해 보세요!"
            android:textColor="#9A9696" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical">

            <Button
                android:id="@+id/submit_1"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:backgroundTint="@color/bottom"
                android:fontFamily="@font/gowundodum"
                android:gravity="center"
                android:text="입력 완료"
                android:layout_marginLeft="100dp"
                android:textAlignment="gravity"
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>

</ScrollView>